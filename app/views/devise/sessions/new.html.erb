<section class="container">
  <div class="columns">
    <div class="column is-9">
      <%= image_pack_tag 'cats/cat-login.jpeg' %>
    </div>
    <div class="column is-3">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
        </div>
      
        <div class="field">
          <%= f.label :password, class: 'label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      
        <div class="actions">
          <%= f.submit "登入", class: 'button is-light is-medium' %>
        </div>
      <% end %>
      <hr>
      <div class="field"><%= render "devise/shared/links" %></div>
      <div class="field"><%= link_to "使用Google登入", user_google_oauth2_omniauth_authorize_path, class: "button is-danger is-medium"%></div>
      <div class="field"><%= link_to "使用FB登入", user_facebook_omniauth_authorize_path, class: "button is-link is-medium"%></div>
    </div>
  </div>
</section>


