<section class="section">
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>日期</th>
        <th>訂單編號</th>
        <th>金額</th>
        <th>狀態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <th><%= order.created_at %></th>
          <th><%= order.num %></th>
          <th><%= order.total_price %></th>
          <th><%= order.state %></th>
          <th>
            <%= link_to "付款", '#', class: 'button is-primary is-small' %>
            <%= link_to "取消", '#', class: 'button is-danger is-small' %>


          </th>
        </tr>
      <% end %>



    </tbody>



  </table>


</section>