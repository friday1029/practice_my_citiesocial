<section class="section">
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>日期</th>
        <th>訂單編號</th>
        <th>金額</th>
        <th>狀態</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <th><%= order.created_at %></th>
          <th><%= order.num %></th>
          <th><%= order.total_price %></th>
          <th><%= order.state %></th>
          <th>
            <%= link_to "付款", pay_order_path(order), method: 'post', class: 'button is-primary is-small' if order.may_pay? %>
            <%= link_to "取消", cancel_order_path(order), method: 'delete', data: {confirm: "確定取消訂單? \n 如果訂單已付款將會進行退費"}, class: 'button is-danger is-small' if order.may_cancel? %>
          </th>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>